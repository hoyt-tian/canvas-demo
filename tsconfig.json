{
  "compilerOptions": {
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "module": "commonjs",
    "target": "es6",
    "baseUrl": "./",
    "paths": {
      "@*": [
        "./src*"
      ]
    },
    "jsx": "react"
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ]
}